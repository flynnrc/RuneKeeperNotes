{
  "name": ".NET Dev Environment with Claude Code",

  "image": "mcr.microsoft.com/devcontainers/dotnet:1-8.0",

  "forwardPorts": [5000, 5001],

  "portsAttributes": {
    "5001": {
      "protocol": "https"
    }
  },

  "mounts": [
    "source=runekeeper-claude-config,target=/home/vscode/.claude,type=volume"
  ],

  "postCreateCommand": "bash .devcontainer/post-create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "humao.rest-client",
        "ms-dotnettools.vscodeintellicode-csharp"
      ]
    }
  },

  "remoteUser": "vscode"
}