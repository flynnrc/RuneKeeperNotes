{
  "name": ".NET Dev Environment with Claude Code",

  "image": "mcr.microsoft.com/devcontainers/dotnet:1-9.0",

  // Uncomment and add your API key to skip OAuth authentication:
  // "containerEnv": {
  //   "ANTHROPIC_API_KEY": "sk-ant-your-key-here"
  // },

  "forwardPorts": [5000, 5001],

  "portsAttributes": {
    "5001": {
      "protocol": "https"
    }
  },

  "mounts": [
    "source=runekeeper-home,target=/home/vscode,type=volume"
  ],

  "postCreateCommand": "bash .devcontainer/post-create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csharp",
        "ms-dotnettools.csdevkit",
        "humao.rest-client",
        "ms-dotnettools.vscodeintellicode-csharp"
      ]
    }
  },

  "remoteUser": "vscode"
}